# MacBook Maintenance Tool - Environment Configuration
# Copy this file to .env and customize as needed

# Logging
LOG_LEVEL=info
LOG_PATH=~/.mac-maintenance/logs/maintenance.log

# Cleanup Settings
MAX_CACHE_AGE_DAYS=30
AUTO_BACKUP=true
CONFIRM_BEFORE_DELETE=true

# Monitoring Thresholds
CPU_ALERT_THRESHOLD=80
RAM_ALERT_THRESHOLD=85
DISK_ALERT_THRESHOLD=90

# iCloud Settings
ICLOUD_TRASH_PATH=~/Library/Mobile Documents/com~apple~CloudDocs/.Trash

# Process Monitoring
MONITORED_PROCESSES=fileproviderd,coredns,mdworker,bird,cloudd
